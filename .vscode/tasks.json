{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-ps1xml",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/build/build-ps1xml.ps1"
      ],
      "group": "build"
    },
    {
      "label": "build-scriptmodule",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/build/build-scriptmodule.ps1"
      ],
      "group": "build"
    },
    {
      "label": "build-docs",
      "command": "pwsh",
      "args": ["-NoProfile", "-File", "${workspaceFolder}/build/build-docs.ps1"]
    },
    {
      "label": "build-manifest",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/build/build-manifest.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["build-ps1xml", "build-scriptmodule", "build-docs"],
      "dependsOrder": "parallel"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-Command",
        "Remove-Item",
        "${workspaceFolder}/build/debug",
        "-Recurse"
      ],
      "problemMatcher": []
    },
    {
      "label": "update-docs",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/build/update-docs.ps1"
      ]
    },
    {
      "label": "build-release",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/build/build-release.ps1",
        "-Version",
        "${input:Version}"
      ],
      "problemMatcher": []
    },
    {
      "label": "test-pester",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "Invoke-Pester -Path '${workspaceFolder}/tests'"
      ],
      "problemMatcher": "$pester",
      "type": "process",
      "dependsOn": "build-manifest",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test-pester-dind",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-File",
        "${workspaceFolder}/tests/Test-Docker.ps1"
      ],
      "problemMatcher": "$pester",
    }
  ],
  "inputs": [
    {
      "id": "Version",
      "description": "Semantic version of module to build",
      "type": "promptString"
    }
  ]
}
